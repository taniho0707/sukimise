# Database
# For Docker Compose (container-to-container)
DATABASE_URL=postgres://sukimise_user:sukimise_password@postgres:5432/sukimise?sslmode=disable

# For local development (if running PostgreSQL locally)
# DATABASE_URL=postgres://sukimise_user:sukimise_password@localhost:5432/sukimise?sslmode=disable

# JWT Secret
JWT_SECRET=your-jwt-secret-key

# Server
PORT=8080

# Frontend
VITE_API_URL=http://localhost:8080

# Discord Bot
# Get your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here
SUKIMISE_API_URL=http://backend:8080
BOT_PORT=8081

# Google Maps API
# Get your API key from https://console.cloud.google.com/apis/credentials
# Enable Places API (New)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here